<ContentDialog
    x:Class="WeatherDataAnalysis.View.AddDayContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add New Day"
    PrimaryButtonText="Done"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <TextBlock HorizontalAlignment="Left" Margin="0,58,0,0" Text="High Temperature:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Grid.Column="0" x:Name="highTempTextBox" HorizontalAlignment="Left" Margin="148,0,0,0" Text="" VerticalAlignment="Center" Width="138"/>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="0,107,0,0" Text="Low Temperature:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Grid.Column="0" x:Name="lowTempTextBox" HorizontalAlignment="Left" Margin="148,101,0,0" Text="" VerticalAlignment="Top" Width="138"/>
        <DatePicker Grid.Column="0" x:Name="newDayDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</ContentDialog>
